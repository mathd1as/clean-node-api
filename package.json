{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Construindo uma API Rest em NodeJS utilizando TDD, Clean Architecture e Design Patterns.",
  "main": "index.js",
  "standard": {
    "env": ["jest"]
  },
  "scripts": {
    "test": "jest --watch --silent --colors --noStackTrace --passWithNoTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --covarage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mathd1as/clean-node-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mathd1as/clean-node-api/issues"
  },
  "homepage": "https://github.com/mathd1as/clean-node-api#readme",
  "devDependencies": {
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "standard": "^16.0.3"
  }
}
